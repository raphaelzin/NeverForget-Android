<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="6dip"
    android:background="@color/colorGray"
    android:layout_marginTop="2dp"
    android:id="@+id/fullOperationCell">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/selfPicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:src="@mipmap/ic_launcher"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contactPicture"
        android:layout_marginRight="4dp"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:id="@+id/arrow"
        android:src="@drawable/arrow"
        android:contentDescription="Arrow"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$12.04"
        android:textColor="#FE4847"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/selfName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YourName"
        android:textColor="#FE4847"
        android:textAlignment="center"

        android:layout_below="@+id/selfPicture"
        android:layout_centerHorizontal="@+id/selfPicture"
         />

    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="conName"
        android:textColor="#FE4847"
        android:textAlignment="center"

        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/contactPicture" />

</RelativeLayout>