<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.raphaelsouza.neverforget.AddOperation"
    tools:showIn="@layout/activity_add_operation">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="6dip"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/fullOperationCell">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/selfPicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_account_circle"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contactPicture"
            android:layout_marginRight="4dp"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_account_circle"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:id="@+id/arrow"
            android:src="@drawable/ic_arrow"
            android:padding="10dp"
            android:contentDescription="Arrow"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/amountCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12.04"
            android:textColor="@color/colorContent"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/selfName"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selfPicture"
            android:layout_centerHorizontal="@+id/selfPicture"

            android:text="Raphael"
            android:textAlignment="center"
            android:textColor="@color/colorContent" />

        <TextView
            android:id="@+id/contactName"
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:text="conName"
            android:textColor="@color/colorContent"
            android:textAlignment="center"
            android:layout_below="@+id/contactPicture"
            android:layout_centerHorizontal="@+id/contactPicture"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:capitalize="words"
            android:hint="First and Last name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/amount_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_layout"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/amount"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_layout"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:capitalize="sentences"
            android:hint="Description" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/when_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_layout"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp">

    <EditText
        android:id="@+id/when"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="When" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/isDebt"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginRight="-5dp"
            android:onClick="setDebt"
            android:text="I borrowed" />

        <Button
            android:id="@+id/notDebt"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginLeft="-5dp"
            android:onClick="setDebt"
            android:text="I Lent" />

    </LinearLayout>

</LinearLayout>
